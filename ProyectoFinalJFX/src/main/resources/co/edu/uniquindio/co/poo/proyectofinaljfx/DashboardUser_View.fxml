<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.co.poo.proyectofinaljfx.Controller.DashboardUserController">

    <!-- Panel Izquierdo (Menú) -->
    <left>
        <VBox prefWidth="200" spacing="15" style="-fx-padding:20; -fx-background-color:#f5f6fa;">
            <children>
                <Label style="-fx-font-size:16px; -fx-font-weight:bold;" text="Opciones" />

                <Button fx:id="BtnRetirar" onAction="#onChangeRetirar" prefHeight="35" prefWidth="71.0" text="Retirar" />
                <Button fx:id="BtnDepositar" onAction="#onChangeDepositar" prefHeight="35" prefWidth="71.0" text="Depositar" />
                <Button fx:id="BtnTransferir" onAction="#onChangeTransferir" prefHeight="35" prefWidth="71.0" text="Transferir" />
                <Button fx:id="BtnSMS" onAction="#onNotificar" prefHeight="35" prefWidth="71.0" text="SMS" />
                <Button fx:id="BtnInfo" onAction="#onBeneficios" prefHeight="35" text="Beneficios" />
                <Button fx:id="BtnHistorial" onAction="#onHistorial" prefHeight="35" prefWidth="71.0" text="Historial" />

                <Region VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </left>

    <!-- Parte Superior -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding:15; -fx-background-color:#dfe6f0;">
            <children>

                <Label style="-fx-font-size:22px; -fx-font-weight:bold;" text="Monedero Virtual" />

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15">
                    <children>

                        <Label style="-fx-font-size:16px;" text="Usuario:" />
                        <Label fx:id="TxtNombreUsuario" style="-fx-font-size:16px; -fx-font-weight:bold;" text="Nombre Usuario" />

                        <!-- BOTÓN PARA CERRAR SESIÓN -->
                        <Button fx:id="BtnCerrarSesion" onAction="#onCerrarSesion" prefHeight="28" style="-fx-background-color:#e74c3c; -fx-text-fill:white;" text="Cerrar Sesión" />

                    </children>
                </HBox>

            </children>
        </HBox>
    </top>

    <!-- Panel Central -->
    <center>
        <VBox alignment="TOP_LEFT" spacing="20" style="-fx-padding:30;">
            <children>

                <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Información de la Cuenta" />

                <HBox spacing="10">
                    <children>
                        <Label style="-fx-font-size:16px;" text="Saldo:" />
                        <Label fx:id="TxtSaldo" style="-fx-font-size:16px; -fx-font-weight:bold;" text="0" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label style="-fx-font-size:16px;" text="Puntos:" />
                        <Label fx:id="TxtPuntos" style="-fx-font-size:16px; -fx-font-weight:bold;" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label style="-fx-font-size:16px;" text="Rango:" />
                        <Label fx:id="TxtRango" style="-fx-font-size:16px; -fx-font-weight:bold;" />
                    </children>
                </HBox>

                <Separator />

                <Label style="-fx-text-fill:#666;" text="Seleccione una opción del menú para continuar." />

            </children>
        </VBox>
    </center>

</BorderPane>
